<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_popuwin"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_300"
    android:background="@drawable/mainpopuwin_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/maincard_bg"
        android:orientation="vertical">


        <TextView
            android:layout_width="@dimen/dp_40"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/icon_hui" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toLeftOf="@+id/iv_cross"
                android:src="@mipmap/ic_redflag" />

            <ImageView
                android:id="@+id/iv_cross"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/ic_cross" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">


            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_50"
                android:text="@string/type"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/navigation"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/details"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/icon_hui" />

        <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rly_pop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160" />
    </LinearLayout>

</LinearLayout>